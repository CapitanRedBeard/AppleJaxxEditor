{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "definitions": {
    "screen": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "screen": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "selectedIcon": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "left": {
      "$ref": "#/definitions/screen"
    },
    "right": {
      "$ref": "#/definitions/screen"
    },
    "animationType": {
      "type": "string",
      "enum": [
        "door",
        "parallax",
        "slide",
        "slide-and-scale"
      ]
    },
    "style": {
      "type": "object",
      "properties": {
        "leftDrawerWidth": {
          "type": "integer"
        },
        "rightDrawerWidth": {
          "type": "integer"
        },
        "contentOverlayColor": {
          "type": "string",
          "format": "color"
        },
        "drawerShadow": {
          "type": "boolean"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": []
}