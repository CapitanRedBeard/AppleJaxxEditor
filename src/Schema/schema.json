        "toolbarHeight": {
          "type": "integer"
        },
        "toolbarIconSize": {
          "type": "integer"
        },
        "toolbarInputColor": {
          "type": "string"
        },
        "toolbarInverseBg": {
          "type": "string"
        },
        "toolbarTextColor": {
          "type": "string"
        }
      }
    },
    "thumbnail": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "thumbnail"
          ]
        },
        "attributes": {
          "type": "object",
          "properties": {
            "square": {
              "type": "boolean",
              "default": false
            },
            "source": {
              "type": "string",
              "default": ""
            },
            "size": {
              "type": "integer",
              "default": 30
            }
          },
          "additionalProperties": false,
          "required": [
            "source"
          ]
        },
        "style": {
          "type": "object",
          "default": {}
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "attributes"
      ]
    },
    "button": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "button"
          ]
        },
        "text": {
          "type": "string"
        },
        "eval": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          }
        },
        "attributes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "primary",
              "success",
              "info",
              "warning",
              "danger",
              "disabled",
              "bordered",
              "rounded",
              "small",
              "large",
              "transparent",
              "capitalize"
            ]
          }
        },
        "style": {
          "type": "object",
          "properties": {
            "button": {
              "type": "object"
            },
            "buttonText": {
              "type": "object"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "type"
      ]
    }
