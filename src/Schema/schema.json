{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "drawer": {
      "$ref": "#/definitions/drawer"
    },
    "pages": {
      "$ref": "#/definitions/pages"
    },
    "footer": {
      "$ref": "#/definitions/footer"
    },
    "theme": {
      "$ref": "#/definitions/theme"
    },
    "metaData": {
      "type": "object",
      "properties": {
        "userID": {
          "type": "integer"
        }
      },
      "required": []
    }
  },
  "definitions": {
    "drawer": {
      "type": "object",
      "properties": {
        "content": {
          "type": "object"
        },
        "attributes": {
          "type": "object",
          "properties": {
            "acceptDoubleTap": {
              "type": "boolean",
              "default": false
            },
            "acceptPan": {
              "type": "boolean",
              "default": true
            },
            "acceptTap": {
              "type": "boolean",
              "default": false
            },
            "captureGestures": {
              "type": "string",
              "enum": [
                "true",
                "false",
                "open",
                "closed"
              ],
              "defualt": "open"
            },
            "closedDrawerOffset": {
              "type": "integer",
              "default": 0
            },
            "disabled": {
              "type": "boolean",
              "default": false
            },
            "elevation": {
              "type": "integer",
              "default": 0
            },
            "initializeOpen": {
              "type": "boolean",
              "default": false
            },
            "negotiatePan": {
              "type": "boolean",
              "default": false
            },
            "openDrawerOffset": {
              "type": "integer",
              "default": 100
            },
            "panThreshold": {
              "type": "number",
              "default": 0.25
            },
            "side": {
              "type": "string",
              "enum": [
                "left",
                "right"
              ],
              "defualt": "left"
            },
            "styles": {
              "type": "object",
              "defualt": {}
            },
            "tapToClose": {
              "type": "boolean",
              "default": false
            },
            "tweenDuration": {
              "type": "integer",
              "default": 250
            },
            "tweenEasing": {
              "type": "string",
              "defualt": "linear"
            },
            "type": {
              "type": "string",
              "enum": [
                "overlay",
                "displace",
                "static"
              ],
              "defualt": "displace"
            }
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "content"
      ]
    },
    "footer": {
      "type": "object",
      "properties": {
        "style": {
          "type": "object",
          "properties": {
            "tabBarTextColor": {
              "type": "string"
            },
            "tabBarActiveTextColor": {
              "type": "string"
            },
            "tabActiveBgColor": {
              "type": "string"
            }
          }
        },
        "tabs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "icon": {
                "type": "string"
              },
              "eval": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "index": {
                    "type": "integer"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        }
      },
      "required": [
        "style",
        "tabs"
      ]
    },
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "layout": {
            "type": "string"
          },
          "style": {
            "type": "object"
          },
          "components": {
            "anyOf": [
              {
                "$ref": "#/definitions/text"
              },
              {
                "$ref": "#/definitions/button"
              },
              {
                "$ref": "#/definitions/thumbnail"
              }
            ]
          }
        },
        "additionalProperties": false,
        "required": [
          "key",
          "components"
        ]
      }
    },
    "text": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "text"
          ]
        },
        "text": {
          "type": "string",
          "default": "empty text"
        },
        "style": {
          "type": "object",
          "default": {}
        }
      },
      "additionalProperties": false,
      "required": [
        "type"
      ]
    },
    "theme": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "badgeBg": {
          "type": "string"
        },
        "badgeColor": {
          "type": "string"
