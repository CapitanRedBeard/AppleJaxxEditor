        },
        "checkboxBgColor": {
          "type": "string"
        },
        "checkboxSize": {
          "type": "integer"
        },
        "checkboxTickColor": {
          "type": "string"
        },
        "contentPadding": {
          "type": "integer"
        },
        "defaultProgressColor": {
          "type": "string"
        },
        "defaultSpinnerColor": {
          "type": "string"
        },
        "dropdownBg": {
          "type": "string"
        },
        "dropdownLinkColor": {
          "type": "string"
        },
        "fontFamily": {
          "type": "string"
        },
        "fontSizeBase": {
          "type": "integer"
        },
        "footerBtnMargin": {
          "type": "integer"
        },
        "footerDefaultBg": {
          "type": "string"
        },
        "footerHeight": {
          "type": "integer"
        },
        "iconFamily": {
          "type": "string"
        },
        "iconFontSize": {
          "type": "integer"
        },
        "iconLineHeight": {
          "type": "integer"
        },
        "iconMargin": {
          "type": "integer"
        },
        "inputBorderColor": {
          "type": "string"
        },
        "inputErrorBorderColor": {
          "type": "string"
        },
        "inputFontSize": {
          "type": "integer"
        },
        "inputGroupMarginBottom": {
          "type": "integer"
        },
        "inputHeightBase": {
          "type": "integer"
